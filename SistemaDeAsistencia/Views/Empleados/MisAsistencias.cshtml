@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model X.PagedList.IPagedList<SistemaDeAsistencia.Models.Asistencia>

@{
    ViewData["Title"] = "Mis Asistencias";
}

<div class="container py-4">
    <div class="bg-white rounded-3 shadow-sm p-4 mb-4">
        <h1 class="display-6 fw-bold text-primary">
            <i class="bi bi-calendar-check"></i> @ViewData["Title"]
        </h1>
        <p class="fs-6 text-muted mb-0">
            Consulta tu historial de entradas y salidas registradas.
        </p>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th>Entrada</th>
                            <th>Salida</th>
                            <th>Horas Trabajadas</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr class="text-center">
                                    <td>
                                        @item.Entrada?.ToString("dd/MM/yyyy HH:mm")
                                    </td>
                                    <td>
                                        @if (item.Salida.HasValue)
                                        {
                                            @item.Salida.Value.ToString("dd/MM/yyyy HH:mm")
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning text-dark">Pendiente</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.Entrada.HasValue && item.Salida.HasValue)
                                        {
                                            var duracion = item.Salida.Value - item.Entrada.Value;
                                            <span class="fw-semibold text-success">
                                                @duracion.TotalHours.ToString("F2") h
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center text-muted">No se encontraron registros de asistencias.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (Model != null && Model.PageCount > 1)
    {
        <div class="d-flex justify-content-center mt-4">
            @Html.PagedListPager(Model, pagina => Url.Action("MisAsistencias",
                new
                {
                    pagina = pagina
                }),
                new PagedListRenderOptions
                {
                    LiElementClasses = new string[] { "page-item" },
                    PageClasses = new string[] { "page-link" }
                })
        </div>
    }
</div>