<!DOCTYPE html>
@using SistemaDeAsistencia.Servicios;
@inject ServicioJustificaciones ServicioJustificaciones;
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Asistia</title>
    <link rel="icon" type="image/png" href="/imagenes/2.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SistemaDeAsistencia.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column h-100">
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/imagenes/2.png" alt="Logo de mi empresa" style="max-width: 50px;" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">

                            @{ 
                                var conteosPendientes = ServicioJustificaciones.contarPendientes();
                                var controladorActual = ViewContext.RouteData.Values["Controller"] as string;
                                var vistaActual = ViewContext.RouteData.Values["Action"] as string;
                            }

                            <a class="nav-link nav_personalizado @(controladorActual=="Home" && vistaActual=="Index"? "link_activo": " ")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home me-1"></i> Inicio
                            </a>
                        </li>

                        @if (User.IsInRole("Empleado"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Asistencias" && vistaActual=="Marcar"? "link_activo": " ")" asp-area="" asp-controller="Asistencias" asp-action="Marcar">
                                    <i class="fas fa-clock me-1"></i> Marcar Asistencia
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Justificaciones" && vistaActual=="Crear"? "link_activo": " ")" asp-area="" asp-controller="Justificaciones" asp-action="Crear">
                                    <i class="fas fa-file-pen me-1"></i> Justificar
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Empleados" && vistaActual=="MisAsistencias"? "link_activo": " ")" asp-area="" asp-controller="Empleados" asp-action="MisAsistencias">
                                    <i class="fas fa-list-check me-1"></i> Mis Asistencias
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Empleados" && vistaActual=="MisJustificaciones"? "link_activo": " ")" asp-area="" asp-controller="Empleados" asp-action="MisJustificaciones">
                                    <i class="fas fa-file-alt me-1"></i> Mis Justificaciones
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Asistencias" && vistaActual=="Marcar"? "link_activo": " ") " asp-area="" asp-controller="Asistencias" asp-action="Marcar">
                                    <i class="fas fa-clock me-1"></i> Marcar Asistencia
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Empleados" && vistaActual=="MisAsistencias"? "link_activo": " ")" asp-area="" asp-controller="Empleados" asp-action="MisAsistencias">
                                    <i class="fas fa-list-check me-1"></i> Mis Asistencias
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Reportes" &&vistaActual=="Index"? "link_activo": " ")" asp-area="" asp-controller="Reportes" asp-action="Index">
                                    <i class="fas fa-chart-line me-1"></i> Reportes
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Admin" &&vistaActual=="Empleados"? "link_activo": " ") " asp-area="" asp-controller="Admin" asp-action="Empleados">
                                    <i class="fas fa-users me-1"></i> Empleados
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Departamentos" && vistaActual=="Index"? "link_activo": " ")" asp-area="" asp-controller="Departamentos" asp-action="Index">
                                    <i class="fas fa-building me-1"></i> Departamentos
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link nav_personalizado @(controladorActual=="Justificaciones" &&  vistaActual=="Crear"? "link_activo": " ")" asp-area="" asp-controller="Justificaciones" asp-action="Crear">
                                    <i class="fas fa-file-pen me-1"></i> Justificar
                                </a>
                            </li>
                            <li class="nav-item">
                                <div class="position-relative">
                                    <a class="nav-link nav_personalizado @(controladorActual=="Justificaciones" && vistaActual=="RevisarJustificaciones"? "link_activo": " ")" asp-area="" asp-controller="Justificaciones" asp-action="RevisarJustificaciones">
                                        <i class="fas fa-tasks"></i> Revisar Justificaciones
                                    </a>
                                    @if (conteosPendientes > 0)
                                    {
                                        <span class="position-absolute top-0 start-50 badge rounded-pill bg-danger">
                                            @conteosPendientes
                                        </span>
                                    }
                                </div>

                            </li>
                        }

                        <li class="nav-item">
                            <a class="nav-link nav_personalizado @(controladorActual=="Home" && vistaActual=="Privacy"? "link_activo": " ")" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-info-circle me-1"></i> Acerca de
                            </a>
                        </li>

                    </ul>

                    <partial name="_LoginPartial" />

                </div>

            </div>

        </nav>

    </header>

    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center mt-auto">
        <div class="container">
            &copy; 2025 - Asistia - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacidad</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>