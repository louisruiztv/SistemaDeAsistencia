@using X.PagedList
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common
@model X.PagedList.IPagedList<SistemaDeAsistencia.Models.Justificacion>

@{
    ViewData["Title"] = "Revisar Justificaciones";
    Layout = "_Layout";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2 class="fw-bold text-primary mb-0">
            <i class="fa-solid fa-file-circle-check"></i> Administración de Justificaciones
        </h2>
        <p class="text-muted mb-0">Revisa, aprueba o rechaza las solicitudes de justificación enviadas por los empleados.</p>
    </div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary shadow-sm">
        <i class="fa-solid fa-arrow-left"></i> Volver
    </a>
</div>

@if (TempData["Mensaje"] != null)
{
    <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
        <i class="fa-solid fa-circle-check"></i> @TempData["Mensaje"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card shadow-sm border-0">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover table-borderless align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Usuario</th>
                        <th scope="col">Fecha de Inasistencia</th>
                        <th scope="col">Motivo</th>
                        <th scope="col">Estado</th>
                        <th scope="col">Archivo</th>
                        <th scope="col" class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Usuario.NombreCompleto)</td>
                                <td>@item.FechaInasistencia.ToString("dd/MM/yyyy")</td>
                                <td>@Html.DisplayFor(modelItem => item.Motivo)</td>
                                <td>
                                    @switch (item.Estado)
                                    {
                                        case "Aprobada":
                                            <span class="badge bg-success">Aprobada</span>
                                            break;
                                        case "Pendiente":
                                            <span class="badge bg-warning text-dark">Pendiente</span>
                                            break;
                                        case "Rechazada":
                                            <span class="badge bg-danger">Rechazada</span>
                                            break;
                                        default:
                                            <span class="badge bg-secondary">Desconocido</span>
                                            break;
                                    }
                                </td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.RutaArchivoPDF))
                                    {
                                        <a asp-controller="Justificaciones"
                                           asp-action="VerArchivo"
                                           asp-route-nombreArchivo="@System.IO.Path.GetFileName(item.RutaArchivoPDF)"
                                           target="_blank"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fa-solid fa-file-lines"></i> Ver Archivo
                                        </a>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.Estado == "Pendiente")
                                    {
                                        <div class="d-flex justify-content-center gap-2">
                                            <form asp-controller="Justificaciones" asp-action="Aprobar" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-success btn-sm">
                                                    <i class="fa-solid fa-check"></i> Aprobar
                                                </button>
                                            </form>
                                            <form asp-controller="Justificaciones" asp-action="Rechazar" method="post">
                                                <input type="hidden" name="id" value="@item.Id" />
                                                <button type="submit" class="btn btn-danger btn-sm">
                                                    <i class="fa-solid fa-xmark"></i> Rechazar
                                                </button>
                                            </form>
                                        </div>
                                    }
                                    else
                                    {
                                        <span class="text-muted fst-italic">@item.Estado</span>
                                    }
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center text-muted">No se encontraron justificaciones.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@if (Model != null && Model.PageCount > 1)
{
    <div class="d-flex justify-content-center mt-4">
        @Html.PagedListPager(Model, pagina => Url.Action("RevisarJustificaciones",
            new
            {
                pagina = pagina
            }),
            new PagedListRenderOptions
            {
                LiElementClasses = new string[] { "page-item" },
                PageClasses = new string[] { "page-link" }
            })
    </div>
}