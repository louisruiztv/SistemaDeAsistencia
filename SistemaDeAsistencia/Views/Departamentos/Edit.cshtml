@model SistemaDeAsistencia.Models.Departamento

@{
    ViewData["Title"] = "Editar Departamento";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-primary text-white d-flex align-items-center">
        <i class="fa-solid fa-pen-to-square me-2"></i>
        <h5 class="mb-0">Editar Departamento</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="Nombre" class="form-label fw-bold"></label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del departamento" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fa-solid fa-arrow-left"></i> Volver
                </a>
                <button type="submit" class="btn btn-success">
                    <i class="fa-solid fa-floppy-disk"></i> Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
