@model SistemaDeAsistencia.Controllers.EditarUsuarioViewModel

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="fw-bold text-primary">
        <i class="fa-solid fa-user-pen"></i> @ViewData["Title"]
    </h2>
    <a asp-action="Empleados" class="btn btn-outline-secondary shadow-sm">
        <i class="fa-solid fa-arrow-left"></i> Volver al Listado
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <form asp-action="EditarUsuario">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="NombreCompleto" class="form-label fw-bold">
                            <i class="fa-solid fa-id-card"></i> @Html.DisplayNameFor(m => m.NombreCompleto)
                        </label>
                        <input asp-for="NombreCompleto" class="form-control" placeholder="Ingrese el nombre completo" />
                        <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label fw-bold">
                            <i class="fa-solid fa-envelope"></i> @Html.DisplayNameFor(m => m.Email)
                        </label>
                        <input asp-for="Email" class="form-control" placeholder="Ingrese el correo electrónico" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="DepartamentoId" class="form-label fw-bold">
                            <i class="fa-solid fa-building"></i> @Html.DisplayNameFor(m => m.DepartamentoId)
                        </label>
                        <select asp-for="DepartamentoId" class="form-select" asp-items="ViewBag.DepartamentoId">
                            <option value="">-- Seleccionar Departamento --</option>
                        </select>
                        <span asp-validation-for="DepartamentoId" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa-solid fa-floppy-disk"></i> Guardar
                        </button>
                        <a asp-action="Empleados" class="btn btn-secondary">
                            <i class="fa-solid fa-xmark"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
