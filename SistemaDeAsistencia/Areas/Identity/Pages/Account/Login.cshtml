@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "_Layout";
}

<div class="d-flex">
    <div class="row w-100 align-self-xl-start">
        <div class="col-4">
            <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
                <!-- Definimos nuestro encabezado -->
                <div class="card-header bg-primary text-white text-center py-4">
                    <h3 class="fw-bold mb-0">
                        <i class="fa-solid fa-right-to-bracket me-2"></i> @ViewData["Title"]
                    </h3>
                    <small class="text-white-50">Accede a tu cuenta para continuar</small>
                </div>

                <!-- Definimos nuestro cuerpo -->
                <div class="card-body p-4 p-md-5">
                    <form id="account" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <!-- Email -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="nombre@ejemplo.com" />
                            <label asp-for="Input.Email">Correo electrónico</label>
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Contraseña" />
                            <label asp-for="Input.Password">Contraseña</label>
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>

                        
                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <!-- Submit -->
                        <button id="login-submit" type="submit" class="btn btn-primary btn-lg w-100 shadow-sm rounded-pill">
                            <i class="fa-solid fa-unlock me-2"></i> Iniciar Sesión
                        </button>

                        <!-- Forgot Password -->
                        <div class="mt-4 text-center">
                            <a id="forgot-password" asp-page="./ForgotPassword" class="text-decoration-none fw-semibold text-primary">
                                ¿Olvidaste tu contraseña?
                            </a>
                        </div>
                    </form>

                    <!-- External Logins -->
                    @if (Model.ExternalLogins?.Count > 0)
                    {
                        <hr class="my-4" />
                        <div class="text-center">
                            <p class="mb-3 text-muted">O inicia sesión con</p>
                            <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-outline-secondary me-2 mb-2 rounded-pill px-3" name="provider" value="@provider.Name">
                                        <i class="fa-brands fa-@provider.Name.ToLower() me-1"></i> @provider.DisplayName
                                    </button>
                                }
                            </form>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
